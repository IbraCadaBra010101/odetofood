@page "{restaurantID:int}"

@model odetofood.Pages.Restaurants.DetailModel
@{
    ViewData["Title"] = "Detail";
}


<h2>@Model.Restaurant.Name</h2>
<div>
    Id:@Model.Restaurant.Id
</div>
<div>
    Location: @Model.Restaurant.Name
</div>
<div>
    Cuisine: @Model.Restaurant.Cuisine
</div>
@if (Model.Added != null)
{
    <div class="alert alert-info">@Model.Added</div>
} 
else
{
    <div class="alert alert-info">@Model.Updated</div>
}
<a asp-page="./List" class="btn btn-danger">All Restaurants</a>